# Module definition
module(
    name = "score-baselibs",
    version = "0.1",
    compatibility_level = 0,
)

# Python rules and interpreter dependency
bazel_dep(name = "rules_python", version = "1.0.0")

python = use_extension("@rules_python//python/extensions:python.bzl", "python")
python.toolchain(
    is_default = True,
    python_version = "3.12",
)
use_repo(python)

# LLVM Toolchains Rules - host configuration
bazel_dep(name = "toolchains_llvm", version = "1.3.0")

llvm = use_extension("@toolchains_llvm//toolchain/extensions:llvm.bzl", "llvm")
llvm.toolchain(
    cxx_standard = {"": "c++17"},
    llvm_version = "16.0.0",
)
use_repo(llvm, "llvm_toolchain")
use_repo(llvm, "llvm_toolchain_llvm")

# Add GoogleTest dependency
bazel_dep(name = "googletest", version = "1.15.0")
bazel_dep(name = "google_benchmark", version = "1.9.1")

# Checker rule for CopyRight checks/fixes
bazel_dep(name = "score_cr_checker", version = "0.2.0")

# Provides formatting and linting of Bazel files.
bazel_dep(name = "buildifier_prebuilt", version = "7.3.1")

# Generic linting and formatting rules
bazel_dep(name = "aspect_rules_lint", version = "1.0.3")
